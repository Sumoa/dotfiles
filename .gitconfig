[user]
	name = Christof Huber
	email = christof.huber@jambit.com
[core]
	excludesfile = /Users/chuber/.gitignore_global
[difftool "sourcetree"]
	cmd = /usr/local/bin/idea diff $LOCAL $PWD/$REMOTE
	path = 
[mergetool "sourcetree"]
	cmd = /usr/local/bin/idea merge $PWD/$LOCAL $PWD/$REMOTE $PWD/$BASE
	trustExitCode = true
[commit]
	template = /Users/chuber/.stCommitMsg
[alias]
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%ad%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all --date=short
	adog = log --all --decorate --oneline --graph
